<h1>&#127828; Burgers! &#127828;</h1>

<img src="/assets/img/burger_image.png">

<div class = "addBurgerForm">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <p>
        <input type="text" id="ca" name="burger_name">
      </p>
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label>
      <p>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured.
      </p>
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>

<div class = "lists">
  <div class = "ulLeft">
    <h2>Burgers not devoured!</h2>
    <ul class = "list">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class = "ulRight">
    <h2>Burgers devoured!</h2>
    <ul class = "list">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

